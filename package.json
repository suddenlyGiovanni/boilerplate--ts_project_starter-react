{
  "name": "boilerplate--ts_project_starter-react",
  "version": "1.0.8",
  "description": "My highly opinionated starting point for a CRA TypeScript project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suddenlyGiovanni/boilerplate--ts_project_starter-react.git"
  },
  "author": "suddenlyGiovanni <ravalico.giovanni@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suddenlyGiovanni/boilerplate--ts_project_starter-react/issues"
  },
  "homepage": "https://github.com/suddenlyGiovanni/boilerplate--ts_project_starter-react#readme",
  "dependencies": {
    "@emotion/core": "10.0.27",
    "@emotion/styled": "10.0.27",
    "@types/redux-logger": "3.0.7",
    "axios": "0.19.2",
    "cuid": "2.1.8",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-redux": "7.2.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.0.1",
    "redux": "4.0.5",
    "redux-logger": "3.0.6",
    "redux-starter-kit": "0.5.1",
    "typesafe-actions": "4.4.2"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "2.1.2",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@testing-library/cypress": "4.2.0",
    "@testing-library/react": "8.0.9",
    "@types/jest": "25.1.3",
    "@types/node": "12.0.7",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "7.0.9",
    "@types/react-router-dom": "5.1.3",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "commitizen": "3.1.2",
    "cypress": "3.8.3",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-jest": "23.7.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "2.7.0",
    "jest-dom": "3.5.0",
    "jest-emotion": "10.0.27",
    "lint-staged": "8.2.1",
    "prettier": "1.19.1",
    "source-map-explorer": "2.3.1",
    "standard-version": "6.0.1",
    "typescript": "3.5.1",
    "typescript-styled-plugin": "0.14.0",
    "webpack": "4.41.6"
  },
  "scripts": {
    "cz": "git-cz",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "eject": "react-scripts eject",
    "purge-node_modules": "rm -rf node_modules",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}'",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run prettier:write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
